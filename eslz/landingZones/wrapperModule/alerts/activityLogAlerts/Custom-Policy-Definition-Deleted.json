{
    "alertName": "Custom Policy Definition Deleted",
    "alertDescription": "This activity log alert fires when Custom Policy Definition is deleted.",
    "condition": {
        "value": [
            {
                "field": "category",
                "equals": "Administrative"
            },
            {
                "field": "operationName",
                "equals": "Microsoft.Authorization/policyDefinitions/delete"
            },
            {
                "field": "status",
                "containsAny": [
                    "failed",
                    "succeeded"
                ]
            }
        ]
    }
}