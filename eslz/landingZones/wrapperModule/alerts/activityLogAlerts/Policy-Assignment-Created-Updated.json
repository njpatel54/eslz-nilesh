{
    "alertName": "Azure Policy Assignment Created or Updated",
    "alertDescription": "This activity log alert fires when Azure Policy Assignment is created or exisiting Policy Assignment updated.",
    "condition": {
        "value": [
            {
                "field": "category",
                "equals": "Administrative"
            },
            {
                "field": "operationName",
                "equals": "Microsoft.Authorization/policyAssignments/write"
            },
            {
                "field": "status",
                "containsAny": [
                    "failed",
                    "succeeded"
                ]
            }
        ]
    }
}