{
    "alertName": "Custom Policy Set Definition Created",
    "alertDescription": "This activity log alert fires when Custom Policy Set Definition is created.",
    "condition": {
        "value": [
            {
                "field": "category",
                "equals": "Administrative"
            },
            {
                "field": "operationName",
                "equals": "Microsoft.Authorization/policySetDefinitions/write"
            },
            {
                "field": "status",
                "containsAny": [
                    "failed",
                    "succeeded"
                ]
            }
        ]
    }
}