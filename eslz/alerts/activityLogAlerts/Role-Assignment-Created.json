{
    "alertName": "Azure Role Assignment Created",
    "alertDescription": "This activity log alert fires when Azure Role Assignment is created.",
    "condition": {
        "value": [
            {
                "field": "category",
                "equals": "Administrative"
            },
            {
                "field": "operationName",
                "equals": "Microsoft.Authorization/roleAssignments/write"
            },
            {
                "field": "status",
                "containsAny": [
                    "failed",
                    "succeeded"
                ]
            }
        ]
    }
}
